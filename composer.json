{
    "name": "agotime/agotime",
    "description": "Agotime: time and date",
    "type": "library",
    "keywords": [
        "agotime",
        "timeago",
        "time",
        "date",
        "time-date",
        "date-time"
    ],
    "require": {
        "php": "^8.3",
        "ext-mbstring": "*",
        "ext-json": "*",
        "ext-date": "*"
    },
    "require-dev": {
        "laravel/pint": "^1.25",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.4"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Agotime\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Sushil Kumar",
            "email": "sushilkumbhar77@gmail.com"
        }
    ],
    "scripts": {
        "test:lint": "./vendor/bin/pint",
        "test:type": "./vendor/bin/phpstan analyse",
        "test:unit": "./vendor/bin/phpunit --colors",
        "tests": [
            "@test:lint --repair --parallel",
            "@test:type --no-progress",
            "@test:unit --no-progress"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
